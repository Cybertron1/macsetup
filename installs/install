#!/bin/bash

set -e

tools="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/tools"
printf "+------------------------------------------------------------+
|  ðŸ›   Macsetup is going to install dev tools, apps and more  |
+------------------------------------------------------------+\n\n"
declare -a Files=("xcodeselect" "homebrew" "zsh" "tools" "asdf" "apps")
for file in "${Files[@]}"; do
  printf "\033[36mðŸ›   Next up: %s\033[0m\n" "$file"
  bash "$tools/$file"
  printf "\033[92mðŸŽ‰ finished: %s\033[0m\n\n" "$file"
done
